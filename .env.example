# LLM Configuration (Required - choose at least one)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4-turbo-preview

ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Primary LLM provider (openai or anthropic)
LLM_PROVIDER=openai
LLM_FALLBACK_PROVIDER=anthropic

# Airtable Configuration
AIRTABLE_API_KEY=pat-your-airtable-key-here
AIRTABLE_BASE_ID=app-your-base-id-here
AIRTABLE_WOMEN_TABLE=Women's Graphic Tees
AIRTABLE_CHILDREN_TABLE=Children's Graphic Tees
AIRTABLE_MEN_TABLE=Men's Graphic Tees

# Logging
LOG_LEVEL=info

# Scheduler (Cron expression - default: Monday 6 AM)
CRON_SCHEDULE=0 6 * * 1
TIMEZONE=America/New_York

# Optional: Browser Configuration
HEADLESS=true
BROWSER_TIMEOUT=30000

# Optional: Proxy (if needed)
# PROXY_URL=http://username:password@proxy.example.com:8080

# Optional: Notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/XXX/XXX