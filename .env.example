# ─── LLM Providers ─────────────────────────────────────
# At least one is required for self-healing and vision extraction
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
LLM_PROVIDER=openai
LLM_FALLBACK_PROVIDER=anthropic

# ─── Airtable ──────────────────────────────────────────
# Required for production runs. Without these, runs in dry-run mode.
AIRTABLE_API_KEY=pat...
AIRTABLE_BASE_ID=app...
AIRTABLE_TABLE_NAME=Latest Arrivals

# ─── ScrapingBee ───────────────────────────────────────
# Required for bot-protected sites (Snipes, Abercrombie)
SCRAPINGBEE_API_KEY=

# ─── Notifications ─────────────────────────────────────
# Optional — Slack webhook for run notifications
SLACK_WEBHOOK_URL=

# ─── Browser ───────────────────────────────────────────
HEADLESS=true
BROWSER_TIMEOUT=30000

# ─── Scheduler (only for local PM2 deployment) ────────
CRON_SCHEDULE=0 6 * * 1
TIMEZONE=America/New_York

# ─── Logging ───────────────────────────────────────────
LOG_LEVEL=info